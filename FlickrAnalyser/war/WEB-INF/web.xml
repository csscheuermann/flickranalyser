<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>cron</web-resource-name>
			<url-pattern>/cron/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>admin</role-name>
		</auth-constraint>
	</security-constraint>
	
	<servlet>
		<servlet-name>Analyser</servlet-name>
		<servlet-class>com.flickranalyser.html.ServletCreateSpot
		</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Analyser</servlet-name>
		<url-pattern>/init</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>Crawler</servlet-name>
		<servlet-class>com.flickranalyser.html.CrawlData</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Crawler</servlet-name>
		<url-pattern>/cron/crawl</url-pattern>
	</servlet-mapping>
	
	
	<servlet>
		<servlet-name>Put In Queue</servlet-name>
		<servlet-class>com.flickranalyser.html.SpotToQueue</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Put In Queue</servlet-name>
		<url-pattern>/queue/put</url-pattern>
	</servlet-mapping>
	
	

	
</web-app>